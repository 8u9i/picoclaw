# Core model settings
PICOCLAW_AGENTS_DEFAULTS_PROVIDER=openrouter
PICOCLAW_AGENTS_DEFAULTS_MODEL=openai/gpt-4o-mini
PICOCLAW_GATEWAY_HOST=0.0.0.0
PICOCLAW_GATEWAY_PORT=8080
PICOCLAW_HEARTBEAT_ENABLED=false

# Persistent storage (attach Railway Volume, mount path typically /data)
PICOCLAW_HOME=/data/.picoclaw
PICOCLAW_AGENTS_DEFAULTS_WORKSPACE=/data/.picoclaw/workspace

# Required: set at least one provider key
PICOCLAW_PROVIDERS_OPENROUTER_API_KEY=sk-or-v1-xxxxx
# PICOCLAW_PROVIDERS_OPENAI_API_KEY=sk-xxxxx
# PICOCLAW_PROVIDERS_ANTHROPIC_API_KEY=sk-ant-xxxxx

# Example channel (Telegram)
PICOCLAW_CHANNELS_TELEGRAM_ENABLED=true
PICOCLAW_CHANNELS_TELEGRAM_TOKEN=123456:ABCDEF

# Optional
PICOCLAW_TOOLS_WEB_BRAVE_ENABLED=false
PICOCLAW_TOOLS_WEB_BRAVE_API_KEY=
